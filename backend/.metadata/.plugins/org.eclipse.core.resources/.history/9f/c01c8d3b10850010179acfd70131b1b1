//                return token;
//            }
//        }
//        return null;
//    }
    
    @Override
    public Token login(User user) {
        User dbUser = userRepo.findByEmail(user.getEmail());
        if (dbUser != null) {
            String encrypted = EncryptUtil.getEncryptedPassword(user.getPassWord(), dbUser.getSalt());
            User matched = userRepo.findByEmailAndPassWord(user.getEmail(), encrypted);
            if (matched != null) {
                // Set isLoggedIn true
                matched.setLoggedIn(true);
                userRepo.save(matched);

                // Generate JWT dynamically based on userType
                String jwt = "Bearer " + generateJWT(matched.getId(), matched.getUserType());
                Token token = new Token();
                token.setToken(jwt);
                return token;
            }
        }
        return null;
    }

    public boolean logout(int userId) {
        Optional<User> userOpt = userRepo.findById(userId);
        if (userOpt.isPresent()) {
            User user = userOpt.get();
            user.setLoggedIn(false);
            userRepo.save(user);
            return true;
        }
        return false;
    }


//    private String generateJWT(int userId) {
//        Key key = Keys.hmacShaKeyFor(Base64.getDecoder().decode(AppConstant.SECRET));
//        List<GrantedAuthority> authorities = AuthorityUtils.commaSeparatedStringToAuthorityList("ROLE_USER");
